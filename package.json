{
  "name": "code-wallet",
  "version": "1.0.0",
  "description": "A desktop application for managing code fragments",
  "main": "src/electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "clean": "rmdir /s /q build dist",
    "package-win": "npm run build && electron-builder --win",
    "package-all": "npm run build && electron-builder --win --mac --linux"
  },
  "keywords": ["electron", "react", "code", "fragments"],
  "author": "Samir NZAMBA",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "electron": "^25.0.0",
    "electron-builder": "^24.4.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "highlight.js": "^11.8.0",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.everydaydev.codewallet",
    "productName": "Code Wallet",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/electron/main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Code Wallet"
    }
  }
}